<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data User</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: lightblue">
    <div class="container mt-5">
      <div class="row">
        <div class="col-md 8">
          <h2>Daftar Users</h2>
          <a href="user/create" class="btn btn-primary mb-2">create new user</a>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">ID</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(user,i) {%>
              <tr>
                <th scope="row"><%= i+1 %></th>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.password %></td>
                <td>
                  <a
                    href="/user/update/<%= user.id %>"
                    class="btn btn-success badge rounded-pill"
                    >update</a
                  >
                  <a
                    class="delete-button btn btn-danger badge rounded-pill"
                    data-id="<%= user.id %>"
                    >delete</a
                  >
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <a href="login" class="btn btn-danger mt-2">log out</a>
        </div>
      </div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"
  ></script>
  <script src="main.js"></script>
</html>
